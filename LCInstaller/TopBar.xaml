<UserControl x:Class="LCInstaller.TopBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Height="30" Width="525">
    <Grid MouseDown="DragGrid" Background="White">
        <Grid Background="#FF515151" Margin="0,0,60,0">
            <Image x:Name="Icon" Source="/LCInstaller;Component/Icon.ico" HorizontalAlignment="Left" Height="24"
                   VerticalAlignment="Center" Width="24" Margin="3,3,0,3" />
            <Label x:Name="Label" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,0,0,0"
                   Height="30" VerticalContentAlignment="Center" Foreground="WhiteSmoke" FontSize="12" />
        </Grid>
        <Button Content="-" VerticalAlignment="Top" Width="30" Margin="0,0,30,0" Height="30"
                HorizontalAlignment="Right" FontSize="12" Click="Minimize" />
        <Button Content="X" VerticalAlignment="Top" Width="30" Height="30" HorizontalAlignment="Right" FontSize="10"
                Click="Close" />

    </Grid>
</UserControl>